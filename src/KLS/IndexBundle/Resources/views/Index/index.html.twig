{% extends 'KLSCoreBundle::base.html.twig' %}

{% set position = ['first', 'second', 'third', 'fourth', 'fifth'] %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts output="js/map.js"
        'bundles/klsindex/js/map.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script type="text/javascript" src="//maps.google.com/maps/api/js?sensor=true"></script>

{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    {% stylesheets 'bundles/klsindex/css/styles.css' filter='cssrewrite' output='css/front.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}


{% block body %}
    <!-- Header -->
    <header class="navbar navbar-fixed-top" role="banner">

        <div class="container">

            <div class="navbar-header">
                <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a href="/" class="navbar-brand">Sabroso</a>
            </div>

            <nav class="collapse navbar-collapse" role="navigation">
                <ul class="nav navbar-nav">
                    <li class="logo-header"><a href="#"><img class="img-responsive" src="{{ asset('bundles/klsindex/images/logo_2.png') }}" alt="Logo"></a></li>
                    <li><a href="#recipe">Recettes</a></li>
                    <li><a href="#where">Nous trouver</a></li>

                    {% if not gallery is empty %}
                    <li><a href="#gallery">Galerie</a></li>
                    {% endif %}

                    {% if not press is null %}
                    <li><a href="#presse">Presse</a></li>
                    {% endif %}

                    <li><a href="#contact">Contact</a></li>
                    <li>
                        <p class="navbar-text">
								<span class="fa-stack">
									<i class="fa fa-circle fa-stack-2x fa-inverse"></i>
									<a href="https://twitter.com/sabroso_cocina"><i class="fa fa-twitter fa-stack-1x"></i></a>
								</span>

								<span class="fa-stack">
									<i class="fa fa-circle fa-stack-2x fa-inverse"></i>
									<a href="https://www.facebook.com/SabrosoCocinaAmbulante"><i class="fa fa-facebook fa-stack-1x"></i></a>
								</span>
                        </p>
                    </li>
                </ul>
            </nav>

        </div>
    </header>

    <!-- TOP -->
    <section class="center-middle" id="top">
        <div class="row text-center">
            <img class="img-responsive" src="{{ asset('bundles/klsindex/images/logo_2.png') }}" alt="Logo">
        </div>
    </section>
    <!-- End TOP -->

    <!-- Welcome -->
    <section id="welcome">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="text-center blue">Bienvenidos</h2>
                </div>

                <p>
                    <span class="sabroso">“Sabroso”</span> est le premier food truck “latino” qui a pour volonté de proposer différentes spécialités sud-américaines élaborées au sein de notre camion Citroen type H.
                </p>

                <p>
                    Venez découvir nos plats “faits maison” comme les arepas, les empanadas, platanos, ceviches ... <br>Pour un voyage gustatif et ... <span class="sabroso">“Sabroso”</span> !
                </p>

            </div>
        </div>
    </section>
    <!-- End welcome -->

    <!-- Recipe -->
    <section id="recipe">
        <div class="container">
            <div class="row">

                <h2 class="text-center">Menu</h2>

                <h3>Les erapas</h3>

                <div class="col-lg-12">
                    <div class="row">

                        {% for recipe in recipes %}
                        <article id="recipe-{{ position[loop.index0] }}-block" class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                            <div class="row center-middle">

                                <div class="col-lg-6 col-md-12">
                                    <img src="{{ asset(recipe.image.webPath) }}" alt="{{ recipe.image.alt }}" class="img-circle">
                                </div>

                                <div class="col-lg-6 col-md-12">
                                    <h4>{{ recipe.name }}</h4>
                                    <span class="ingredient">{{ recipe.description }}</span>
                                </div>

                            </div>
                        </article>
                        {% endfor %}

                    </div>
                </div>

                <h3>Et encore</h3>

                <article id="recipe-fifth-block" class="col-lg-2">
                    <h4>CARAPUNERA</h4>
                    <span class="ingredient">Saucisse couteau, avocat, banane plantain</span>
                </article>

                <article id="recipe-sixth-block" class="col-lg-2">
                    <h4>PELUA</h4>
                    <span class="ingredient">Viande de boeuf, fromage edam</span>
                </article>

                <article id="recipe-seventh-block" class="col-lg-2">
                    <h4>SERPENTINA (VÉGÉTARIENNE)</h4>
                    <span class="ingredient">Haricot noir, avocat, banane plantain, fromage </span>
                </article>

                <article id="recipe-eighth-block" class="col-lg-2">
                    <h4>DOMINO</h4>
                    <span class="ingredient">Haricots noirs, fromage</span>
                </article>

                <article id="recipe-nineth-block" class="col-lg-4">
                    <h4>Nous proposons aussi</h4>
                    <div id="other-ingredient" class="ingredient">
                        <p>Soupe</p><p>Dessert</p><p>Boisson</p>
                    </div>
                </article>

            </div>
        </div>
    </section>
    <!-- End recipe -->

    <!-- Where -->
    <section id="where">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="text-center blue">Où nous trouver ?</h2>
                </div>

                {% for day in days %}
                <article class="{% if loop.index0 == 3 %}col-lg-offset-2 {% endif %}col-lg-4 col-md-4">
                    <div id="{{ position[loop.index0] }}-block-where">
                        <h3>{{ day.date|date('D d') }}</h3>
                        <div class="map" data-lat="{{ day.lat }}" data-lng="{{ day.lng }}" id="{{ position[loop.index0] }}-map"></div>
                        <p>
                            {{ day.address }}
                        </p>
                    </div>
                </article>
                {% endfor %}

            </div>
        </div>
    </section>
    <!-- End where -->

    {% if not gallery is empty %}
    <!-- Gallery -->
    <section id="gallery">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                {% for image in gallery %}
                    <li data-target="#carousel-example-generic" data-slide-to="{{ loop.index0 }}" {% if loop.first %}class="active"{% endif %}></li>
                {% endfor %}
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">

                {% for image in gallery %}
                <div class="item{% if loop.first %} active{% endif %}">
                    <img alt="{{ image.image.alt }}" src="{{ asset(image.image.webPath) }}">
                </div>
                {% endfor %}

            </div>
        </div>
    </section>
    <!-- End gallery -->
    {% endif %}

    {% if not press is null %}
    <!-- Presse -->
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <section id="presse">

                    <h2>Presse</h2>

                    <div class="row">
                        <div class="col-lg-offset-3 col-lg-6">
                            <blockquote>
                                <p>{{ press.content }}</p>
                                <footer>
                                    <cite title="Source Title">
                                        {% if not press.url is null %}
                                        <a class="sabroso" href="{{ press.url }}">
                                        {% endif %}
                                        {{ press.source }}
                                        {% if not press.url is null %}
                                        </a>
                                        {% endif %}
                                    </cite>
                                </footer>
                            </blockquote>
                        </div>
                    </div>

                </section>
            </div>
        </div>
    </div>
    <!-- End presse -->
    {% endif %}

    <!-- Contact -->
    <footer id="contact">
        <div class="container">
            <div class="row">

                <div class="col-lg-12 text-center">
                    <h2 class="blue">Contact</h2>
                </div>

                <div class="col-lg-4" id="first-block-contact">
                    <p id="first-p-contact">
                        Nous souhaitez nous joindre, téléphonez-nous ou laissez-nous un message via le formulaire
                    </p>

                    <p id="third-p-contact">
                        contact@sabroso.fr<br>
                        06 14 24 75 02
                    </p>

                    <p id="fourth-p-contact">
							<span class="fa-stack fa-2x">
								<i class="fa fa-circle fa-stack-2x fa-inverse"></i>
								<a href="https://twitter.com/sabroso_cocina"><i class="fa fa-twitter fa-stack-1x"></i></a>
							</span>

							<span class="fa-stack fa-2x">
								<i class="fa fa-circle fa-stack-2x fa-inverse"></i>
								<a href="https://www.facebook.com/SabrosoCocinaAmbulante"><i class="fa fa-facebook fa-stack-1x"></i></a>
							</span>
                    </p>
                </div>

                <div class="col-lg-offset-2 col-lg-6" id="second-block-contact">
                    <form role="form">
                        <div class="form-group">
                            <textarea placeholder="Votre message" class="form-control" rows="3" required></textarea>
                        </div>

                        <div class="form-group">
                            <input type="email" class="form-control" id="email" placeholder="Votre email" required>
                        </div>

                        <div class="form-group">
                            <input type="text" class="form-control" id="name" placeholder="Votre nom" required>
                        </div>

                        <button type="submit" class="btn bouton pull-right">Envoyer</button>
                    </form>
                </div>

            </div>
        </div>
    </footer>
    <!-- End contact -->
{% endblock %}